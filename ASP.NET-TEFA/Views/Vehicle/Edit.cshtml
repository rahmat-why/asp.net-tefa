@model ASP.NET_TEFA.Models.MsVehicle

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MsVehicle</h4>
<hr />
<div class="position-relative overflow-hidden min-vh-100 d-flex align-items-center justify-content-center">
    <div class="d-flex align-items-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
            <div class="card-body">
                <h6 class="text-center"><b>Tambah Kendaraan</b></h6>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdVehicle" />
                    <div class="form-group">
                        <label asp-for="Type" class="control-label">Tipe</label>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Classify" class="control-label">Jenis</label>
                        <select asp-for="Classify" class="form-control">
                            <option value="Motor">Motor</option>
                            <option value="Mobil">Mobil</option>
                        </select>
                        <span asp-validation-for="Classify" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PoliceNumber" class="control-label">No.Polisi</label>
                        <input asp-for="PoliceNumber" class="form-control" />
                        <span asp-validation-for="PoliceNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label">Warna</label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Year" class="control-label">Tahun</label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleOwner" class="control-label">Nama Pemilik</label>
                        <input asp-for="VehicleOwner" class="form-control" />
                        <span asp-validation-for="VehicleOwner" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ChassisNumber" class="control-label">No.Rangka</label>
                        <input asp-for="ChassisNumber" class="form-control" />
                        <span asp-validation-for="ChassisNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MachineNumber" class="control-label">No.Mesin</label>
                        <input asp-for="MachineNumber" class="form-control" />
                        <span asp-validation-for="MachineNumber" class="text-danger"></span>
                    </div>


                    <input type="hidden" asp-for="IdCustomer" />
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>