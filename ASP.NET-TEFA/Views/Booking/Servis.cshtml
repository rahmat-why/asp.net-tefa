@model IEnumerable<ASP.NET_TEFA.Models.TrsBooking>

@{
    ViewData["Title"] = "Servis Berjalan";
    Layout = "_LayoutUser";
}

<div class="row justify-content-between">
    <div class="col-2">
        <b>Mulai Servis</b>
    </div>
    <div class="col-8">
        <b>Progres</b>
    </div>
    <div class="col-2">
        <b>Estimasi Selesai</b>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row justify-content-between" id="@item.IdBooking">
        <div class="col-2">
            @item.StartRepairTime?.ToString("HH:mm - dd/MM/yyyy")
        </div>
        <div class="col-8">
            <div class="progress">
                <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @item.Progress%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="col-2">
            @item.FinishEstimationTime?.ToString("HH:mm - dd/MM/yyyy")
        </div>
    </div>
}
