@model ASP.NET_TEFA.Models.TrsBooking

@{
    ViewData["Title"] = "KEPUTUSAN";
    Layout = "_LayoutUser";
}


<form asp-action="Decision" method="post">
    <div>
        <input asp-for="IdBooking" class="form-control" hidden value="@ViewBag.IdBooking" />
        
    </div>
    <div>
        <label>Perbaikan : </label>
        <input asp-for="RepairDescription" readonly class="form-control" />
        <span asp-validation-for="RepairDescription" class="text-danger"></span>
    </div>
    <div>
        <label>Ganti Part : </label>
        <input asp-for="ReplacementPart" readonly class="form-control" />
        <span asp-validation-for="ReplacementPart" class="text-danger"></span>
    </div>

    <div>
        <label>Tagihan : </label>
        <input asp-for="Price"  class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
   

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>