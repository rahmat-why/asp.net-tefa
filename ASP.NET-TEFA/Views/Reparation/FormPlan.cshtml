@model ASP.NET_TEFA.Models.TrsBooking

@{
    ViewData["Title"] = "PERENCANAAN";
    Layout = "_LayoutUser";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-action="FormPlan" method="post">
    <input type="hidden" asp-for="IdBooking" />
    <div class="mb-3">
        <label asp-for="RepairDescription">Perbaikan : </label>
        <input asp-for="RepairDescription" class="form-control" />
        <span asp-validation-for="RepairDescription" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ReplacementPart">Ganti Part : </label>
        <input asp-for="ReplacementPart" class="form-control" />
        <span asp-validation-for="ReplacementPart" class="text-danger"></span>
    </div>
    
    <div class="text-end">
        @if (TempData["ErrorMessage"] != null)
        {
            <a asp-controller="Reparation" asp-action="Index" asp-route-IdBooking="@Model.IdBooking" class="btn btn-outline-primary mb-4 ms-auto">
                Kembali
            </a>
        }
        else
        {
            <button type="submit" class="btn btn-primary mb-4 ms-auto">
                Lanjut Keputusan!
            </button>
        }
    </div>
</form>